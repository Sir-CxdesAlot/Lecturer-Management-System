<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<!-- ResetPassword.fxml -->

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="235.0" prefWidth="338.0" style="-fx-background-color: BLACK;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.ResetPassword">
   <children>
     
        <!-- Centered card with tight bounds -->
     <Pane fx:id="card" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="186.0" prefWidth="292.0" style="-fx-background-color: #202020; -fx-background-radius: 20;">
       <effect>
         <DropShadow color="#000000" offsetX="5" offsetY="5" radius="10" spread="0.1" />
       </effect>
       
          <!-- Content VBox with no wasted space -->
       <VBox alignment="TOP_CENTER" layoutX="25" layoutY="15" spacing="12">
         <padding>
           <Insets bottom="10" left="0" right="0" top="10" />
         </padding>
         
            <!-- Title -->
         <Label style="-fx-font-size: 24px; -fx-text-fill: #FFFFFF; -fx-font-weight: bold;" text="Reset Password" />
         
            <!-- Input Field -->
         <TextField prefWidth="250.0" promptText="Username" style="-fx-background-color: #2e2e2e;                         -fx-text-fill: #FFFFFF;                         -fx-prompt-text-fill: #AAAAAA;                         -fx-background-radius: 10;                         -fx-border-color: #444444;                         -fx-border-radius: 10;                         -fx-border-width: 1;">
           <VBox.margin>
             <Insets bottom="0" left="0" right="0" top="10" />
           </VBox.margin>
               <cursor>
                  <Cursor fx:constant="TEXT" />
               </cursor>
         </TextField>
         
            <!-- Buttons Row -->
         <HBox alignment="CENTER" spacing="20" style="-fx-padding: 15 0 0 0;">
           <Button onAction="#handleReset" prefWidth="120" style="-fx-background-color: #3a3a3a;                        -fx-text-fill: #FFFFFF;                        -fx-background-radius: 10;                        -fx-font-weight: bold;" text="Reset Password">
             <effect>
               <DropShadow color="#000000" offsetX="2" offsetY="2" radius="5" spread="0.1" />
             </effect>
                  <cursor>
                     <Cursor fx:constant="HAND" />
                  </cursor>
           </Button>
           
              <Button onAction="#handleBackToLogin" style="-fx-background-color: transparent;                        -fx-text-fill: #BBBBBB;                        -fx-underline: true;                        -fx-border-width: 0;                        -fx-cursor: hand;" text="Back To Login">
                  <cursor>
                     <Cursor fx:constant="HAND" />
                  </cursor></Button>
         </HBox>
       </VBox>
     </Pane>
   </children>
</VBox>
