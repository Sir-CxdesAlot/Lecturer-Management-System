<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" style="-fx-background-color: BLACK;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.UpdateConfirmation">
   <children>
     
        <!-- Card Pane -->
     <Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300" prefWidth="400" style="-fx-background-color: #202020; -fx-background-radius: 20;">
       <effect>
         <DropShadow color="#000000" offsetX="5" offsetY="5" radius="10" spread="0.1" />
       </effect>
       
          <VBox alignment="CENTER" layoutX="25" layoutY="30" prefWidth="350" spacing="20">
         <!-- Title -->
         <Label style="-fx-font-size: 20px; -fx-text-fill: #FFFFFF; -fx-font-weight: bold;" text="Update Lecturer Information Confirmation" textAlignment="CENTER" wrapText="true" />
         
            <!-- Subtitle -->
         <Label style="-fx-font-size: 18px; -fx-text-fill: #BBBBBB;" text="Update Lecturer Information" textAlignment="CENTER" wrapText="true" />
         
            <!-- Warning Message -->
         <Label maxWidth="320" style="-fx-text-fill: #BBBBBB; -fx-font-size: 14px;" text="Are you sure you want to update the lecturer record? This action cannot be undone." textAlignment="CENTER" wrapText="true" />
         
            <!-- Action Buttons -->
         <HBox alignment="CENTER" spacing="20">
           <Button minWidth="120" style="-fx-background-color: #3a3a3a;                        -fx-text-fill: #FFFFFF;                        -fx-background-radius: 10;                        -fx-font-weight: bold;" text="Cancel">
             <effect>
               <DropShadow color="#000000" offsetX="2" offsetY="2" radius="5" spread="0.1" />
             </effect>
                  <cursor>
                     <Cursor fx:constant="HAND" />
                  </cursor>
           </Button>
           <Button minWidth="150" onAction="#handleConfirmUpdate" style="-fx-background-color: #ff4444;                        -fx-text-fill: #FFFFFF;                        -fx-background-radius: 10;                        -fx-font-weight: bold;" text="Confirm Update">
             <effect>
               <DropShadow color="#000000" offsetX="2" offsetY="2" radius="5" spread="0.1" />
             </effect>
                  <cursor>
                     <Cursor fx:constant="HAND" />
                  </cursor>
           </Button>
         </HBox>
       </VBox>
     </Pane>
   </children>
</VBox>
