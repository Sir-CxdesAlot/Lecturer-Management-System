<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<!-- Card Pane -->

<VBox alignment="CENTER" prefHeight="239.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.UpdateMessage">
   <children>
      <Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="268.0" prefWidth="400" style="-fx-background-color: #202020; -fx-background-radius: 20;">
       <effect>
         <DropShadow color="#000000" offsetX="5" offsetY="5" radius="10" spread="0.1" />
       </effect>
       
                <VBox alignment="CENTER" layoutX="50.0" layoutY="51.0" prefWidth="300" spacing="20">
         <!-- Success Message -->
         <Label style="-fx-font-size: 24px; -fx-text-fill: #FFFFFF; -fx-font-weight: bold;" text="Lecturer Record Successfully Updated" textAlignment="CENTER" wrapText="true" />
         
                  <!-- Description -->
         <Label maxWidth="280" style="-fx-text-fill: #BBBBBB; -fx-font-size: 14px;" text="The lecturer record has been successfully updated in the system." textAlignment="CENTER" wrapText="true" />
         
                  <!-- Return Button -->
         <Button minWidth="200" onAction="#handleReturn" style="-fx-background-color: #3a3a3a;                      -fx-text-fill: #FFFFFF;                      -fx-background-radius: 10;                      -fx-font-weight: bold;" text="Return to Home">
           <effect>
             <DropShadow color="#000000" offsetX="2" offsetY="2" radius="5" spread="0.1" />
           </effect>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
         </Button>
       </VBox>
      </Pane>
   </children>
</VBox>
