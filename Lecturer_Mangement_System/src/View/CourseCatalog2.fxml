<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="CENTER" prefWidth="760.0" spacing="20" style="-fx-background-color: #2e2e2e; -fx-background-radius: 10;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.CourseCatalog2">
   <effect>
      <DropShadow color="#000000" offsetX="0" offsetY="3" radius="5" spread="0.1" />
   </effect>
   <padding>
      <Insets bottom="15" left="20" right="20" top="15" />
   </padding>
   <children>
      <VBox spacing="5">
         <children>
            <Label fx:id="CourseTitle" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="Course Code" />
            <Label fx:id="LecturerTitle" style="-fx-text-fill: #CCCCCC;" text="Course Coordinator" />
            <Label fx:id="CourseInfo" style="-fx-text-fill: #CCCCCC;" text="Course Faculty" />
         </children>
      </VBox>
      <Pane HBox.hgrow="ALWAYS" />
      <HBox alignment="CENTER_RIGHT" spacing="10">
         <children>
            <Label style="-fx-text-fill: #4CAF50;" text="Available" />
            <Button onAction="#handleEnroll" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 10;" text="Enroll">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-background-radius: 10;" text="Details">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </HBox>
   </children>
</HBox>
