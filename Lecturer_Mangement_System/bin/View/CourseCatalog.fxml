<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefWidth="1198.0" style="-fx-background-color: BLACK;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.CourseCatalog">
   <children>
      <!-- Card Pane with Drop Shadow -->
      <Pane prefHeight="774.0" prefWidth="1198.0" style="-fx-background-color: #202020; -fx-background-radius: 20;">
         <effect>
            <DropShadow color="#000000" offsetX="5" offsetY="5" radius="15" spread="0.1" />
         </effect>
         <children>
            <!-- Main VBox Container -->
            <VBox layoutX="79.0" layoutY="37.0" prefWidth="1040" spacing="20">
               <padding>
                  <Insets bottom="20" left="20" right="20" top="20" />
               </padding>
               <children>
                  <!-- Header: Title + Logout -->
                  <HBox alignment="CENTER_LEFT" spacing="20">
                     <Button onAction="#handleBack" style="-fx-background-color: #333333; -fx-text-fill: white; -fx-background-radius: 15; -fx-min-width: 60;" text="Back">
                        <cursor>
                           <Cursor fx:constant="HAND" />
                        </cursor>
                        <effect>
                           <DropShadow color="#000000" offsetX="2" offsetY="2" radius="5" spread="0.1" />
                        </effect>
                     </Button>
                     <Label style="-fx-font-size: 28px; -fx-text-fill: white; -fx-font-weight: bold;" text="Course Catalog" />
                     <Pane HBox.hgrow="ALWAYS" />
                     <Button onAction="#handleLogout" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-background-radius: 10;" text="Logout">
                        <cursor>
                           <Cursor fx:constant="HAND" />
                        </cursor>
                     </Button>
                  </HBox>

                  <!-- Search Bar -->
                  <HBox spacing="10">
                     <TextField prefHeight="40" promptText="Search by course, lecturer, code" style="-fx-background-color: #2e2e2e; -fx-text-fill: white; -fx-prompt-text-fill: #AAAAAA; -fx-background-radius: 10;" HBox.hgrow="ALWAYS" />
                     <ComboBox prefHeight="40" prefWidth="150" promptText="All" style="-fx-background-color: #2e2e2e; -fx-text-fill: white; -fx-prompt-text-fill: #AAAAAA; -fx-background-radius: 10;">
                        <cursor>
                           <Cursor fx:constant="HAND" />
                        </cursor>
                     </ComboBox>
                  </HBox>

                  <!-- Scrollable List of Courses -->
                  <ScrollPane fx:id="CourseScrollP" fitToWidth="true" hbarPolicy="NEVER" prefHeight="441.0" prefWidth="1004.0" style="-fx-background-color: #202020;" stylesheets="@../Util/style.css" vbarPolicy="ALWAYS">
                     <styleClass>
                        <String fx:value="scroll-bar" />
                        <String fx:value="scroll-pane" />
                        <String fx:value="viewport" />
                     </styleClass>
                  </ScrollPane>

                  <!-- Add Button -->
                  <HBox alignment="CENTER" spacing="10">
                     <padding>
                        <Insets top="20" />
                     </padding>
                     <children>
                        <Button fx:id="addCourseButton" onAction="#handleAddNewCourse" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 16px; -fx-font-weight: bold;" text="Add New Course">
                           <effect>
                              <DropShadow color="#000000" offsetX="2" offsetY="2" radius="5" spread="0.1" />
                           </effect>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                     </children>
                  </HBox>

               </children>
            </VBox>
         </children>
      </Pane>
   </children>
</VBox>
