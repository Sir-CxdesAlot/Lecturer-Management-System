<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" style="-fx-background-color: BLACK;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.AddLecturerInfo">
   <children>
     
        <!-- Card Pane -->
     <Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500" prefWidth="400" style="-fx-background-color: #202020; -fx-background-radius: 20;">
       <effect>
         <DropShadow color="#000000" offsetX="5" offsetY="5" radius="10" spread="0.1" />
       </effect>
       
          <VBox layoutX="25" layoutY="30" prefWidth="350" spacing="15">
         <!-- Header with Back Button -->
         <HBox alignment="CENTER_LEFT" spacing="10">
            <Button onAction="#handleBack" style="-fx-background-color: #333333; -fx-text-fill: white; -fx-background-radius: 15; -fx-min-width: 60;" text="Back">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <effect>
                  <DropShadow color="#000000" offsetX="2" offsetY="2" radius="5" spread="0.1" />
               </effect>
            </Button>
            <Label style="-fx-font-size: 24px; -fx-text-fill: #FFFFFF; -fx-font-weight: bold;" text="Add Lecturer Information" />
         </HBox>
         
            <!-- Form Fields -->
         <VBox spacing="10">
           <Label style="-fx-text-fill: #BBBBBB;" text="Staff Number" />
           <TextField fx:id="staffNumberField" prefWidth="350" style="-fx-background-color: #2e2e2e; -fx-text-fill: #FFFFFF; -fx-prompt-text-fill: #AAAAAA; -fx-background-radius: 10; -fx-border-color: #444444; -fx-border-radius: 10; -fx-border-width: 1;">
                  <cursor>
                     <Cursor fx:constant="TEXT" />
                  </cursor>
           </TextField>
           
              <Label style="-fx-text-fill: #BBBBBB;" text="Office Number" />
           <TextField fx:id="officeNumberField" prefWidth="350" style="-fx-background-color: #2e2e2e; -fx-text-fill: #FFFFFF; -fx-prompt-text-fill: #AAAAAA; -fx-background-radius: 10; -fx-border-color: #444444; -fx-border-radius: 10; -fx-border-width: 1;">
                  <cursor>
                     <Cursor fx:constant="TEXT" />
                  </cursor>
           </TextField>
           
              <Label style="-fx-text-fill: #BBBBBB;" text="Staff Name" />
           <TextField fx:id="staffNameField" prefWidth="350" style="-fx-background-color: #2e2e2e; -fx-text-fill: #FFFFFF; -fx-prompt-text-fill: #AAAAAA; -fx-background-radius: 10; -fx-border-color: #444444; -fx-border-radius: 10; -fx-border-width: 1;">
                  <cursor>
                     <Cursor fx:constant="TEXT" />
                  </cursor>
           </TextField>
           
              <Label style="-fx-text-fill: #BBBBBB;" text="Building Location" />
           <TextField fx:id="buildingLocationField" prefWidth="350" style="-fx-background-color: #2e2e2e; -fx-text-fill: #FFFFFF; -fx-prompt-text-fill: #AAAAAA; -fx-background-radius: 10; -fx-border-color: #444444; -fx-border-radius: 10; -fx-border-width: 1;">
                  <cursor>
                     <Cursor fx:constant="TEXT" />
                  </cursor>
           </TextField>
         </VBox>
         
            <!-- Courses Section -->
         <Label style="-fx-text-fill: #BBBBBB; -fx-font-weight: bold; -fx-padding: 10 0 0 0;" text="Assigned Courses" />
         <TextField fx:id="assignedCourseField" prefWidth="350" promptText="No course assigned" editable="false" style="-fx-background-color: #2e2e2e; -fx-text-fill: #FFFFFF; -fx-prompt-text-fill: #AAAAAA; -fx-background-radius: 10; -fx-border-color: #444444; -fx-border-radius: 10; -fx-border-width: 1;">
                  <cursor>
                     <Cursor fx:constant="TEXT" />
                  </cursor>
           </TextField>
         
            <HBox alignment="CENTER_LEFT" spacing="10">
           <TextField fx:id="phoneField" prefWidth="250" promptText="Enter phone numb" style="-fx-background-color: #2e2e2e; -fx-text-fill: #FFFFFF; -fx-prompt-text-fill: #AAAAAA; -fx-background-radius: 10; -fx-border-color: #444444; -fx-border-radius: 10; -fx-border-width: 1;">
                  <cursor>
                     <Cursor fx:constant="TEXT" />
                  </cursor>
           </TextField>
           <TextField fx:id="specialtyField" prefWidth="250" promptText="Enter specialty" style="-fx-background-color: #2e2e2e; -fx-text-fill: #FFFFFF; -fx-prompt-text-fill: #AAAAAA; -fx-background-radius: 10; -fx-border-color: #444444; -fx-border-radius: 10; -fx-border-width: 1;">
                  <cursor>
                     <Cursor fx:constant="TEXT" />
                  </cursor>
           </TextField>
           <Button minWidth="100" onAction="#handleAddCourse" style="-fx-background-color: #3a3a3a; -fx-text-fill: #FFFFFF; -fx-background-radius: 10; -fx-font-weight: bold;" text="Add Course">
             <effect>
               <DropShadow color="#000000" offsetX="2" offsetY="2" radius="5" spread="0.1" />
             </effect>
                  <cursor>
                     <Cursor fx:constant="HAND" />
                  </cursor>
           </Button>
         </HBox>
         
            <!-- Submit Button -->
         <Button alignment="CENTER" minWidth="350" onAction="#handleSubmit" style="-fx-background-color: #3a3a3a;                      -fx-text-fill: #FFFFFF;                      -fx-background-radius: 10;                      -fx-font-weight: bold;" text="Add Lecturer">
           <effect>
             <DropShadow color="#000000" offsetX="2" offsetY="2" radius="5" spread="0.1" />
           </effect>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
         </Button>
       </VBox>
     </Pane>
   </children>
</VBox>
