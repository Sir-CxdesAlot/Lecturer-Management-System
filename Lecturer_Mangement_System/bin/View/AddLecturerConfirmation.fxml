<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<!-- Card Pane -->

<Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500" prefWidth="400" style="-fx-background-color: #202020; -fx-background-radius: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.AddLecturerConfirmation">
 <effect>
   <DropShadow color="#000000" offsetX="5" offsetY="5" radius="10" spread="0.1" />
 </effect>
 
             <VBox layoutX="25.0" layoutY="30.0" prefWidth="350" spacing="15">
   <!-- Title -->
   <Label style="-fx-font-size: 24px; -fx-text-fill: #FFFFFF; -fx-font-weight: bold;" text="New Lecturer Successfully Added" textAlignment="CENTER" wrapText="true" />
   
               <!-- Description -->
   <Label maxWidth="350" style="-fx-text-fill: #BBBBBB; -fx-font-size: 14px;" text="The following lecturer has been successfully added to the system:" textAlignment="CENTER" wrapText="true" />
   
               <!-- Lecturer Details -->
   <VBox spacing="10" style="-fx-padding: 10 0 0 0;">
     <!-- Lecturer ID -->
     <Label style="-fx-text-fill: #BBBBBB; -fx-font-weight: bold;" text="Lecturer ID" />
     <Label style="-fx-text-fill: #FFFFFF; -fx-font-size: 16px;" text="LEC2024-089" />
     
                 <!-- Name -->
     <Label style="-fx-text-fill: #BBBBBB; -fx-font-weight: bold;" text="Name" />
     <Label style="-fx-text-fill: #FFFFFF; -fx-font-size: 16px;" text="Dr. Sarah Johnson" />
     
                 <!-- Office -->
     <Label style="-fx-text-fill: #BBBBBB; -fx-font-weight: bold;" text="Office" />
     <Label style="-fx-text-fill: #FFFFFF; -fx-font-size: 16px;" text="B-405" />
     
                 <!-- Department -->
     <Label style="-fx-text-fill: #BBBBBB; -fx-font-weight: bold;" text="Department" />
     <Label style="-fx-text-fill: #FFFFFF; -fx-font-size: 16px;" text="Computer Science" />
   </VBox>
   
               <!-- Action Buttons -->
   <HBox alignment="CENTER" spacing="20" style="-fx-padding: 20 0 0 0;">
     <Button minWidth="150" onAction="#handleBackToFaculty" style="-fx-background-color: #3a3a3a;                        -fx-text-fill: #FFFFFF;                        -fx-background-radius: 10;                        -fx-font-weight: bold;" text="Return to Home">
       <effect>
         <DropShadow color="#000000" offsetX="2" offsetY="2" radius="5" spread="0.1" />
       </effect>
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor>
     </Button>
     <Button minWidth="150" onAction="#handleAddAnotherLecturer" style="-fx-background-color: #44aa44;                        -fx-text-fill: #FFFFFF;                        -fx-background-radius: 10;                        -fx-font-weight: bold;" text="Add Another Lecturer">
       <effect>
         <DropShadow color="#000000" offsetX="2" offsetY="2" radius="5" spread="0.1" />
       </effect>
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor>
     </Button>
   </HBox>
 </VBox>
</Pane>
